<div class="banner" style="background-image: linear-gradient(rgba(0,101,168,0.6),
  rgba(0,36,61,0.6) 50%), url('<%= image_tag 'cocktail.jpg' %>')">
  <div class="banner-content">
    <h1>Le Wagon Berlin</h1>
    <p>Learn to code with us in Berlin</p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>

<div class="container">
  <div class="row">

    <h1>Here are all the cocktails you can make</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cocktails.each do |cocktail| %>
        <tr>
          <td><%= cocktail.name %></td>
          <td><%= link_to 'See recipe', cocktail %></td>
          <td><%= link_to 'Delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
