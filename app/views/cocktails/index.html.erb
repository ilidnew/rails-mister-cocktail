<div class="container">
  <div class="row">

    <h1>Here are all the cocktails you can make</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cocktails.each do |cocktail| %>
        <tr>
          <td><%= cocktail.name %></td>
          <td><%= link_to 'See recipe', cocktail %></td>
          <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
          <td><%= link_to 'Delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Cocktail', new_cocktail_path, {class: "btn btn-primary"} %>


  </div>
</div>
